{
  "hosting": {
    "redirects": [ {
      "source": "/aesthetic/",
      "function": "aestheticUrlRedirect",
      "destination": "/bar",
      "type": 301
    }, {
      "source": "/firebase/*",
      "destination": "https://firebase.google.com/",
      "type": 302
    } ],
    "public": "html",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  }
}
