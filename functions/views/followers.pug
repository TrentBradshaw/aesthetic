doctype html
html
    head
        title pickles
        meta(charset='utf-8')
        link(rel='stylesheet' type='text/css' href='https://walrusaesthetic.firebaseapp.com/aesthetic.css')
        script(src='https://www.gstatic.com/firebasejs/5.5.7/firebase.js')
    body
        header
            div#profileHeader
                div#leftHeaderNav
                    a#homeAnchor.navAnchors
                        span#home.headerNav home
                    a#exploreAnchor.navAnchors(href='https://walrusaesthetic.firebaseapp.com/explore')
                        span#explore.headerNav explore

                h2#aestheticHeading.headerNav AESTHETIC
                div#rightHeaderNav
                    span#profile.headerNav profile
                    a.headerNav(href="https://walrusaesthetic.firebaseapp.com/settings")
                        span#settings.headerNav settings
                    span#profileDropDown.dropbtn
                    a#btnLogout.btn.btn-action.hide Log out
        div#followersDiv
            h1#nameOfPersonBeingFollowed #{username}
            h2 followers
            div#followersContainer
        script(src="https://walrusaesthetic.firebaseapp.com/main.js")